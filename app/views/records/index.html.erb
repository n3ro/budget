<h1>Listing records</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Account</th>
    <th>Trasaction</th>
    <th>Id</th>
    <th>Before</th>
    <th>Amount</th>
    <th>After</th>
  </tr>

<% @records.each do |record| %>
  <tr>
    <td> <%= record.id %> </td>
    <td> <%= record.account_id %> </td>
    <td> <%= record.trans_id %> </td>
    <td> <%= record.debit %> </td>
    <td> <%= record.before %> </td>
    <td> <%= record.amount%> </td>
    <td> <%= record.after %> </td>
    <td><%= link_to 'Show', record %></td>
    <td><%= link_to 'Edit', edit_record_path(record) %></td>
    <td><%= link_to 'Destroy', record, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

