<div class="post">
<h1 class="title">Listing expenses</h1>
<p class="byline"><%= @expenses.size %> expenses</p>
<div class="entry">

<p id="notice"><%= notice %></p>
<br />


<table>
  <tr>
    <th>Amount</th>
    <th>Account</th>
    <th>Expense type</th>
  </tr>

<% @expenses.each do |expense| %>
  <tr>
    <td><%= expense.amount %></td>
    <td><%= expense.account.owner.name %></td>
    <td><%= expense.expense_type.name %></td>
    <td><%= link_to 'Show', expense %></td>
    <td><%= link_to 'Edit', edit_expense_path(expense) %></td>
    <td><%= link_to 'Destroy', expense, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>


 <p class="links">
<%= link_to 'New', new_expense_path, :class => 'more' %>

</p>
<br />

  </div>
  </div>

