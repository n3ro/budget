<p><%= @expenses.size %> expenses for <%= @expenses[0].account.owner.name %>'s <%= @expenses[0].account.account_type.name %> account </p>


<p><%= notice %></p>

<table>
  <tr>
    <th>Expense type</th>
    <th>Amount</th>
  </tr>

<% @expenses.each do |expense| %>
  <tr>
    <td><%= expense.expense_type.name %></td>
    <td><%= expense.amount %></td>
    <td><%= link_to 'Show', expense %></td>
    <td><%= link_to 'Edit', edit_expense_path(expense) %></td>
    <td><%= link_to 'Destroy', expense, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
<tr>
  <td>Total: </td> <td> <%= @total %> </td>
</tr>
</table>

<br />


 <p> 
<%= link_to 'New', new_expense_path %>
</p>

