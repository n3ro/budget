
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <meta name="language" content="en" />
  <link rel="icon" type="image/png" href="images/favicon2.png">
  <%= stylesheet_link_tag 'common' %>
  <%= stylesheet_link_tag 'admin' %>
  <%= stylesheet_link_tag 'notice' %>
  <%= stylesheet_link_tag 'tables' %>
  <%= stylesheet_link_tag 'pagination' %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag 'jquery' %>
  <%= javascript_include_tag 'common' %>
  <script>
       jQuery.noConflict();
  </script>
  <title>Prodebook 3 :: Admin</title>
</head>

<body>
  <!-- Header -->
  <div id="header">
    <div id="logo"></div>
  </div>

  <!-- Content -->
  <div id="wrapper">
    <div id="left_column">
      <div class="title">Men√∫ Principal</div>
      <div id="mainmenu">
        <ul>
            <li><%= link_to 'Accounts', accounts_path %></li>
            <li> <%= link_to 'Expenses', expenses_path %></li>
            <li><%= link_to 'Owners', owners_path %></li>
            <li><%= link_to 'Expense Types', expense_types_path %></li>
            <li><%= link_to 'Account Types', account_types_path %></li>
            <li><%= link_to 'Incomes', incomes_path %></li>
            <li><%= link_to 'Transactions', records_path %></li>
        </ul>
      </div>
    </div>

    <div id="middle_column">
      <div class="title">
        <%= params[:controller] %>
      </div>
      <div id="flash_container">
        <%= flash[:notice] %>
      </div>
      <div id="content">
        <%= yield %>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <div id="footer">
    <div class="content">
      <div class="social">&nbsp;</div>
      <div class="company">
        <%= link_to image_tag('rails.png', :width=>96), 'http://www.google.com' %>
      </div>
      <div class="clearfix"></div>
    </div>
  </div>

</body>
</html>
